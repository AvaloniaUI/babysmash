<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector=":is(Control).blinkingEye">
        <Style.Animations>
            <Animation Duration="0:0:7.3" IterationCount="Infinite">
                <KeyFrame KeyTime="00:00:02.1">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="00:00:02.1">
                    <Setter Property="Opacity" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="00:00:02.3">
                    <Setter Property="Opacity" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="00:00:02.3">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="00:00:7.3">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector=":is(Control).shapes">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:1" Delay="0:0:3" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector=":is(Control).fadeAfter">
        <Setter Property="Opacity" Value="0" />
    </Style>
</Styles>